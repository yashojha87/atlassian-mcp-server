{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.4.0",
  "packages": [
    "packages/*"
  ],
  "conventionalCommits": true,
  "allowBranch": "master",
  "verbose": true,
  "createRelease": "github",
  "command": {
    "version": {
      "ignoreChanges": [
        "package-lock.json",
        "**/package-lock.json"
      ],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "ignoreChanges": [
        "package-lock.json",
        "**/package-lock.json"
      ]
    }
  },
  "npmClient": "npm",
  "npmClientArgs": [
    "--no-package-lock"
  ]
}